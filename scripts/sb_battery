#!/bin/sh

for BAT in /sys/class/power_supply/BAT?;
do
	CAPACITY=$(cat "$BAT/capacity")
	STATUS=$(cat "$BAT/status")

	case $STATUS in
		[cC]harging)
			SYM="ðŸ”Œ"
			;;
		[dD]ischarging)
			SYM="ðŸ”‹"
			;;
		[nN]ot\ charging)
			SYM="ðŸ›‘"
			;;
		[fF]ull)
			SYM="âš¡"
			;;
		* )
			CHARSYM=""
			;;
	esac

	printf "%s %s%%" "$SYM" "$CAPACITY"
done
