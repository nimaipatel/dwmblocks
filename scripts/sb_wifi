#!/bin/sh

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ğŸŒ if connected to ethernet or â if none.
# Show ğŸ”’ if a vpn connection is active

WIFI=$(nmcli -get-values IN-USE,SSID,SIGNAL device wifi list | grep '^\*')
NAME=$(echo "$WIFI" | cut -d: -f2)
SIGL=$(echo "$WIFI" | cut -d: -f3)

if [ -z "$WIFI" ]; then
	echo "^C8^ïª© (0%)^d^"
else
	echo "^C2^ïª¨ $NAME ($SIGL%)^d^"
fi
